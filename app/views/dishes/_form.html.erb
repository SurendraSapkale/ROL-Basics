
<%= simple_form_for(@dish) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :cuisine %>
    <%= f.input :special_dietery_details %>
    <%= f.input :price %>
    <%= f.input :street_details %>
    <%= f.input :suburb %>
    <%= f.input :state %>
    <%= f.input :country %>
    <%= f.input :postcode %>
    <%= f.input :picture %>
    <%= f.association :chef %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
